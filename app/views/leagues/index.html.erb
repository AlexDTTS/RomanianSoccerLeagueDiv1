<p id="notice"><%= notice %></p>

<h1>Leagues</h1>

<table class="container">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leagues.each do |league| %>
      <tr>
        <td><%= league.name %></td>
        <td><%= league.description %></td>
        <td><%= link_to 'Show', league, class: "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_league_path(league), class: "btn btn-default" %></td>
        <td><%= link_to 'Delete', league, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New League', new_league_path, class: "btn btn-default" %>
