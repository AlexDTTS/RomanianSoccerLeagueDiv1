<p id="notice"><%= notice %></p>

<h1>Fixtures</h1>

<table class="container">
  <thead class="row">
    <tr>
      <th>Home Team</th>
      <th>Away Team</th><br>
      <th>Date</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
    <div>
      <tbody >
        <% @fixtures.each do |fixture| %>
          <tr>
            <td><%= fixture.team.name %></td>
            <td><%= fixture.opponent %></td>
            <td><%= fixture_date fixture %></td>
            <td><%= fixture_time fixture %></td>
            <td><%= link_to 'Show', fixture,  class: "btn btn-default"  %></td>

            <td><%= link_to 'Edit', edit_fixture_path(fixture),  class: "btn btn-default" %></td>

            <td><%= link_to 'Delete', fixture, method: :delete, data: { confirm: 'Are you sure?' },  class: "btn btn-default"  %></td>
          </tr>
        <% end %>
      </tbody>
    </div>   
</table>

<br>
<br>
<br>
<br>
<br>
<br>
<br>
<div>
  <%= form_tag("/fixtures", method: "get") do %>
    <%= select_tag "date", options_for_select(["Upcoming Matches", "Old Games"]), include_blank: true %>
    <%= submit_tag "Filter Fixtures", class: "btn btn-default" %>
  <% end %>
</div>

<%= link_to 'New Fixture', new_fixture_path, class: "btn btn-default" %>
