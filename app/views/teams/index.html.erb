<p id="notice"><%= notice %></p>

<h1>Teams</h1>

<table class="container">
  <thead>
    <tr>
      <th>Name</th>
      <th>Mascot</th>
      <th>Colors</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="container">
    <% @teams.each do |team| %>
      <tr>
        
        <td>
            <ol>
            <%= team.name %>
              
            </ol>
        </td>
        <td><%= team.mascot %></td>
        <td><%= team.colors %></td>
        <td><%= link_to 'Show', team, class: "btn btn-default" %></td>
        
        <% if team.user_id == current_user.id %>
          <td><%= link_to 'Edit', edit_team_path(team), class: "btn btn-default" %></td>
          <td><%= link_to 'Delete', team, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Team', new_team_path, class: "btn btn-default" %>
